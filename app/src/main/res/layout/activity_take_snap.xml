<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.example.ryan.seniorprojecttest.Sample_TakeSnap">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Import from file/URL"
        android:id="@+id/import_button"
        android:onClick="importSnap"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="32dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:id="@+id/take_snap_exit"
        android:onClick="takeSnapExit"
        android:layout_alignBottom="@+id/import_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />

    <VideoView
        android:id="@+id/take_snap_video_view"
        android:layout_width="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_height="fill_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logging area\n"
        android:id="@+id/take_snap_log_area"
        android:maxLines="20"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Msg"
        android:id="@+id/take_snap_send"
        android:onClick="sendTestMessage"
        android:layout_alignTop="@+id/take_snap_exit"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
