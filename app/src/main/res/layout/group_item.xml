    android:layout_weight="1"/>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/group_text_Inbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_weight="1"/>
</LinearLayout>